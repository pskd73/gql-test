create table post (
    id BIGINT NOT NULL AUTO_INCREMENT,
    title VARCHAR(2048),
    body LONGTEXT,
    author_id BIGINT,
    created_at BIGINT,
    PRIMARY KEY ( id )
);


create table comment (
    id BIGINT NOT NULL AUTO_INCREMENT,
    author_id BIGINT,
    body LONGTEXT,
    created_at BIGINT,
    post_id BIGINT,
    PRIMARY KEY ( id )
);
